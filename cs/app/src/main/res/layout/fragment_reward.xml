<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#454545"
    android:orientation="vertical"
    android:gravity="center"
    tools:context="fragment.RewardFragment">


    <ProgressBar
        android:id="@+id/reward_progress"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/reward_form">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/reward_hit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Completed HIT tasks: "
                android:textColor="@color/white"
                android:textSize="24sp"/>

            <TextView
                android:id="@+id/reward_hit_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="@color/white"
                android:textSize="30sp"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/reward_sensor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Completed Sensor tasks: "
                android:textColor="@color/white"
                android:textSize="24sp"/>

            <TextView
                android:id="@+id/reward_sensor_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="0"
                android:textSize="30sp"/>
        </LinearLayout>
    </LinearLayout>



    <TextView
        android:id="@+id/work_in_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:gravity="bottom"
        android:text="this view is a work in progress"/>

</LinearLayout>
